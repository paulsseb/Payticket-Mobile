<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".BulkActivity"

    android:gravity="center"
    android:stretchColumns="0,1,2">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="-10dp"
            android:orientation="vertical"
            tools:ignore="ExtraText">




            <TextView
                android:layout_width="30dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text=" Child "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <Button
                android:id="@+id/childplus"
                android:layout_width="10dp"
                android:layout_height="90dp"
                android:onClick="addChild"
                android:text="+"
                android:textSize="30dp"


                android:textStyle="bold" />

            <EditText
                android:id="@+id/idchild"
                android:layout_height="44dp"
                android:background="#CCCCCC"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="0"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:onClick="subChild"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>


        <TableRow
            android:layout_width="411dp"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            tools:ignore="ExtraText">


            <TextView
                android:layout_width="11dp"
                android:layout_height="60dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text=" Adult"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />


            <Button
                android:layout_width="10dp"
                android:layout_height="90dp"
                android:onClick="addAdult"
                android:text="+"
                android:textSize="30dp"
                android:textStyle="bold"

                />


            <EditText
                android:id="@+id/idadult"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="#CCCCCC"
                android:clickable="false"

                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"

                android:hint="0"
                android:inputType="number"
                android:text="0"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:onClick="subAdult"
                android:text="-"
                android:textSize="30dp"
                android:textStyle="bold" />

        </TableRow>

        <Button
            android:id="@+id/Cpay"
            android:layout_marginTop="22dp"
            android:onClick="confirmPay"
            android:text="Confirm Payment"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:layout_marginTop="22dp"
            android:onClick="Clr"
            android:text="Back"
            android:textSize="25dp"
            android:textStyle="bold" />


    </TableLayout>


